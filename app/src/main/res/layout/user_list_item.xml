<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    android:layout_marginVertical="@dimen/user_list_margin"
    android:paddingHorizontal="@dimen/user_list_pad_horizontal">

    <ImageView
        android:id="@+id/user_avatar"
        android:layout_width="@dimen/list_image_dimen"
        android:layout_height="@dimen/list_image_dimen"
        android:src="@drawable/avatar_image_placeholder" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/user_info_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_item_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nickname"
            android:textColor="@color/black"
            android:textSize="@dimen/user_list_name_text_size" />

        <TextView
            android:id="@+id/list_item_profession"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/profession"
            android:textColor="@color/app_def_gray"
            android:textSize="@dimen/user_list_profession_text_size" />

    </LinearLayout>
</LinearLayout>