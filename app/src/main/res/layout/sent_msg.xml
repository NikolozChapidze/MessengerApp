<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/message_vertical_margin"
    android:gravity="center|end"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/message_vertical_margin"
        android:text="@string/sample_time"
        android:textColor="@color/app_def_gray"
        android:textSize="@dimen/message_text_size" />

    <TextView
        android:id="@+id/message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="@dimen/message_max_width"
        android:padding="@dimen/message_padding"
        android:text="@string/sample_text"
        android:background="@drawable/send_msg_background"
        android:textColor="@color/white"
        android:textSize="@dimen/message_text_size" />
</LinearLayout>